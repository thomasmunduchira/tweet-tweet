  <header>
    <nav class="navbar navbar-light navbar-static-top bg-faded">
      <a class="navbar-brand" href="#">Tweet Tweet</a>
      <ul class="nav float-xs-right navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="#">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Profile</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="http://example.com" id="supportedContentDropdown" data-toggle="dropdown">Sign In</a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="#">Email</a>
            <a class="dropdown-item" href="#">Password</a>
            <a class="dropdown-item" href="#">Register</a>
          </div>
        </li>
      </ul>
    </nav>
  </header>

  <form>
    <div class="container">
      <div class="form-group">
        <label for="message">Message</label>
        <textarea class="form-control" rows = "2" placeholder="What would you like to post?" id="message"></textarea>
        <div class="row">
          <div class="col-md-6">
            <label class="custom-file">
              <input type="file" accept="image/png, image/jpeg" class="custom-file-input" id="upload">
              <span class="custom-file-control"></span>
            </label>
          </div>
          <div class="col-md-6">
            <p id="characters">
              <span id="length">140</span>
            </p>
          </div>
          <div class="row">
            <img id="file" src="#" alt="File">
          </div>
        </div>
        <div>
          <button type="submit" class="btn btn-primary" id="submit-button">Submit</button>
        </div>
      </div>
    </div>
  </form>

  <div class="container">
    <table class="table">
      <tbody>

      </tbody>
    </table>
  </div>

